
MY_PATH="`dirname \"$0\"`"
MeasureNumber=$1
DestinationDirectory=PQRS_$MeasureNumber/

# echo MY_PATH is $MY_PATH
echo MeasureNumber is $MeasureNumber
echo DestinationDirectory is $DestinationDirectory

mkdir $DestinationDirectory

Source_FILE=$MY_PATH/PQRS_template.php
Destination_FILE=PQRS_$MeasureNumber.php
echo Source_FILE: $Source_FILE  Destination_FILE: $Destination_FILE

sed -e "s/TEMPLATE/$MeasureNumber/g" < $Source_FILE  > $Destination_FILE



for Working_FILE in Denominator.php  Exclusion.php  InitialPatientPopulation.php  Numerator.php  PopulationCriteria.php  
do
	Source_FILE=$MY_PATH/PQRS_template/$Working_FILE
	Destination_FILE=$DestinationDirectory/$Working_FILE

	echo Source file: $Source_FILE
	echo Destination file: $Destination_FILE

	sed -e "s/TEMPLATE/$MeasureNumber/g" < $Source_FILE  > $Destination_FILE
done


ls -d  $DestinationDirectory
ls $DestinationDirectory
